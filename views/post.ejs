<%- include('partials/header') -%>
<div class="container ">
  <div class="row justify-content-center mt-5">
    <div class="col-6 ">
      <h2><%= post.title %></h2>
        <audio
        controls
        src="<%= post.image%>" />
            <a href="<%= post.image%>" />
                Download audio
            </a>
    </audio>
      <div class="row mt-3">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-danger fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-danger fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
      <div class="mt-1">
        <p><%= post.caption %></p>
      </div>
    </div>
    <div class="mt-5">
      <h2>Add feedback</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-danger">Submit</button>
      </form>
    </div>
<div class="row-1">
  <ul class="list-group">
    <% for(var i=0; i<comments.length; i++) {%>
      <li class="col-6 mt-3 list-group-item">
        <%= comments[i].comment%>
        <p><strong>User Name</strong>: <%= user.userName %></p>
      </li>
    
    <% } %>
  </ul>
  <div class="mt-5">
    <a class="btn btn-danger mr-7" href="/profile">Return to Profile</a>
    <a class="btn btn-danger" href="/feed">Return to Feed</a>
  </div>
</div>
  </div>
</div>

<%- include('partials/footer') -%>